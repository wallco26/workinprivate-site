---
import BaseLayout from '../layouts/BaseLayout.astro';
import AppMockup from '../components/AppMockup.astro';
---

<BaseLayout title="WorkInPrivate - AI Content Generation That Runs on YOUR Machine" description="WorkInPrivate is an AI-powered content generation tool that runs 100% locally using Ollama. No API costs, no cloud, complete privacy. 7 specialized modules for SEO, tech docs, academic, finance, healthcare, legal, and small business content.">

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "WorkInPrivate",
    "description": "AI-powered content generation tool that runs 100% locally using Ollama. No API costs, no cloud, complete privacy.",
    "url": "https://www.workinprivate.com",
    "applicationCategory": "BusinessApplication",
    "operatingSystem": "Windows, macOS, Linux",
    "offers": {
      "@type": "Offer",
      "price": "29.00",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock"
    },
    "featureList": [
      "100% local AI processing",
      "7 specialized content modules",
      "Multi-format output (Markdown, Text, HTML, PDF)",
      "Zero API costs",
      "Complete privacy - no telemetry",
      "Cross-platform (Windows, macOS, Linux)"
    ]
  })} />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-[#0a0e17] pt-16 sm:pt-24 pb-20 sm:pb-28">
    <!-- Subtle grid pattern background -->
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: radial-gradient(circle, #22c55e 1px, transparent 1px); background-size: 24px 24px;"></div>

    <!-- Ambient glow effects -->
    <div class="absolute top-20 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-green-500/5 rounded-full blur-3xl -z-10"></div>
    <div class="absolute top-40 right-10 w-[300px] h-[300px] bg-cyan-500/5 rounded-full blur-3xl -z-10"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Text Content -->
      <div class="max-w-4xl mx-auto text-center mb-12 sm:mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-green-900/30 text-green-400 text-sm font-medium mb-6 border border-green-800 font-mono">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
          100% Local &amp; Private
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight tracking-tight">
          AI Content Generation<br class="hidden sm:block" /> That Runs on <span class="text-green-400">YOUR Machine</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-400 mb-8 max-w-2xl mx-auto leading-relaxed">
          Generate SEO articles, technical docs, and specialized content using local LLMs. No API costs. No cloud. Complete privacy.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 mb-5">
          <a href="/pricing" class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold rounded-xl text-black bg-green-500 hover:bg-green-400 transition-all shadow-lg shadow-green-500/30 hover:shadow-green-500/50 hover:-translate-y-0.5 active:translate-y-0 gap-2 font-mono">
            Buy Now &mdash; $29
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
          </a>
          <a href="#how-it-works" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-xl text-gray-300 border border-gray-700 hover:border-green-600 hover:text-green-400 hover:bg-gray-900/50 transition-all gap-2">
            See How It Works
          </a>
        </div>
        <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 text-sm text-gray-400">
          <span class="inline-flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            One-time purchase
          </span>
          <span class="inline-flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            30-day money-back guarantee
          </span>
          <span class="inline-flex items-center gap-1.5">
            <svg class="w-4 h-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            No subscription
          </span>
        </div>
      </div>

      <!-- App Mockup -->
      <AppMockup />
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-20 bg-gray-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Get Started in 3 Simple Steps</h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">Up and running in minutes. No accounts, no subscriptions, no cloud dependencies.</p>
      </div>
      <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Step 1 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-900/30 text-green-400 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 border border-green-800 font-mono">1</div>
          <h3 class="text-xl font-semibold text-white mb-3">Download WorkInPrivate</h3>
          <p class="text-gray-400">Get the app for Windows, macOS, or Linux. Extract and run — no installation wizard needed.</p>
        </div>
        <!-- Step 2 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-900/30 text-green-400 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 border border-green-800 font-mono">2</div>
          <h3 class="text-xl font-semibold text-white mb-3">Run the Setup Wizard</h3>
          <p class="text-gray-400">On first launch, WorkInPrivate installs Ollama automatically and recommends the best AI model for your system.</p>
        </div>
        <!-- Step 3 -->
        <div class="text-center">
          <div class="w-16 h-16 bg-green-900/30 text-green-400 rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-5 border border-green-800 font-mono">3</div>
          <h3 class="text-xl font-semibold text-white mb-3">Generate Content</h3>
          <p class="text-gray-400">Choose a module, pick a topic, and let your local AI create professional content in seconds.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 bg-[#0a0e17]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Why WorkInPrivate?</h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">Professional content generation without the compromises.</p>
      </div>
      <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-green-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">100% Local &amp; Private</h3>
          <p class="text-gray-400">All processing happens on your machine. Your data never leaves your computer — ever.</p>
        </div>
        <!-- Feature 2 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-cyan-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Zero API Costs</h3>
          <p class="text-gray-400">Uses free, open-source AI models via Ollama. No subscriptions, no per-token fees, no surprises.</p>
        </div>
        <!-- Feature 3 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-green-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Multi-Format Output</h3>
          <p class="text-gray-400">Export your content as Markdown, plain text, HTML, or PDF — ready for any workflow.</p>
        </div>
        <!-- Feature 4 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-cyan-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">7 Specialized Modules</h3>
          <p class="text-gray-400">Purpose-built modules for SEO, tech docs, academic, finance, healthcare, legal, and small business content.</p>
        </div>
        <!-- Feature 5 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-green-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Cross-Platform</h3>
          <p class="text-gray-400">Runs on Windows, macOS, and Linux. Works wherever you do.</p>
        </div>
        <!-- Feature 6 -->
        <div class="bg-gray-900/50 rounded-xl p-8 border border-gray-800 hover:border-green-700 transition-all">
          <div class="w-12 h-12 bg-cyan-900/40 rounded-lg flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Smart Model Recommendations</h3>
          <p class="text-gray-400">Automatically suggests the best AI model based on your system specs for optimal performance.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Module Showcase -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">7 Modules. One Toolkit.</h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">Each module is fine-tuned for its domain, generating content that meets industry standards and expectations.</p>
      </div>
      <div class="max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- SEO Writer -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-green-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-green-400 font-mono">01</span>
            SEO Writer
          </h3>
          <p class="text-gray-400 text-sm">Generate SEO-optimized blog articles with keyword research, meta descriptions, and proper heading structure.</p>
        </div>
        <!-- Tech Docs -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-cyan-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-cyan-400 font-mono">02</span>
            Tech Docs
          </h3>
          <p class="text-gray-400 text-sm">Create technical documentation from code repositories with clear explanations and API references.</p>
        </div>
        <!-- Academic -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-fuchsia-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-fuchsia-400 font-mono">03</span>
            Academic
          </h3>
          <p class="text-gray-400 text-sm">Generate academic papers and research articles with proper citations, abstracts, and scholarly formatting.</p>
        </div>
        <!-- Finance -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-green-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-green-400 font-mono">04</span>
            Finance
          </h3>
          <p class="text-gray-400 text-sm">Financial reports, market analysis, and investment content with appropriate disclaimers and data presentation.</p>
        </div>
        <!-- Healthcare -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-cyan-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-cyan-400 font-mono">05</span>
            Healthcare
          </h3>
          <p class="text-gray-400 text-sm">Healthcare content generation with medical terminology, patient education materials, and compliance-aware formatting.</p>
        </div>
        <!-- Legal -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-fuchsia-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-fuchsia-400 font-mono">06</span>
            Legal
          </h3>
          <p class="text-gray-400 text-sm">Legal documents, contracts, and compliance content with proper legal terminology and structure.</p>
        </div>
        <!-- Small Business -->
        <div class="rounded-xl border border-gray-800 border-l-4 border-l-green-500 p-6 bg-gray-900/30 hover:bg-gray-900/50 transition-all group sm:col-span-2 lg:col-span-1">
          <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
            <span class="text-green-400 font-mono">07</span>
            Small Business
          </h3>
          <p class="text-gray-400 text-sm">Marketing copy, business plans, social media content, and operational documents tailored for small businesses.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof / Stats Section -->
  <section class="py-16 bg-[#0a0e17] border-y border-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl sm:text-4xl font-bold text-green-400 mb-1 font-mono">7</div>
          <div class="text-sm text-gray-500 font-medium">Specialized Modules</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl font-bold text-cyan-400 mb-1 font-mono">100%</div>
          <div class="text-sm text-gray-500 font-medium">Local &amp; Private</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl font-bold text-green-400 mb-1 font-mono">$0</div>
          <div class="text-sm text-gray-500 font-medium">Ongoing API Costs</div>
        </div>
        <div>
          <div class="text-3xl sm:text-4xl font-bold text-cyan-400 mb-1 font-mono">3</div>
          <div class="text-sm text-gray-500 font-medium">Platforms Supported</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">What Users Are Saying</h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">Content creators and professionals trust WorkInPrivate for sensitive work.</p>
      </div>
      <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-900/50 rounded-2xl p-8 border border-gray-800 border-l-4 border-l-green-500">
          <div class="mb-4">
            <span class="text-green-400 font-mono text-sm">[★★★★★]</span>
          </div>
          <p class="text-gray-300 mb-6 leading-relaxed">"Finally, an AI writing tool that doesn't send my confidential client data to the cloud. The Legal module saved me hours on contract drafts."</p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-green-400 font-semibold text-sm border border-gray-700">MR</div>
            <div>
              <div class="font-semibold text-white text-sm">Maria R.</div>
              <div class="text-gray-500 text-xs">Corporate Attorney</div>
            </div>
          </div>
        </div>
        <div class="bg-gray-900/50 rounded-2xl p-8 border border-gray-800 border-l-4 border-l-cyan-500">
          <div class="mb-4">
            <span class="text-cyan-400 font-mono text-sm">[★★★★★]</span>
          </div>
          <p class="text-gray-300 mb-6 leading-relaxed">"I switched from ChatGPT for my blog content. No monthly fees, way better SEO output, and I own everything locally. Worth every penny."</p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-cyan-400 font-semibold text-sm border border-gray-700">JT</div>
            <div>
              <div class="font-semibold text-white text-sm">Jake T.</div>
              <div class="text-gray-500 text-xs">Freelance Content Marketer</div>
            </div>
          </div>
        </div>
        <div class="bg-gray-900/50 rounded-2xl p-8 border border-gray-800 border-l-4 border-l-fuchsia-500">
          <div class="mb-4">
            <span class="text-fuchsia-400 font-mono text-sm">[★★★★★]</span>
          </div>
          <p class="text-gray-300 mb-6 leading-relaxed">"We handle HIPAA-sensitive content. Having everything run locally with zero telemetry is a compliance dream. The Healthcare module is spot-on."</p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-fuchsia-400 font-semibold text-sm border border-gray-700">SP</div>
            <div>
              <div class="font-semibold text-white text-sm">Sarah P.</div>
              <div class="text-gray-500 text-xs">Healthcare Compliance Officer</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Privacy / Trust Section -->
  <section class="py-20 bg-gray-950 border-y border-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Your Data. Your Machine. Your Rules.</h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">WorkInPrivate was built from the ground up for people who take privacy seriously.</p>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
          <div>
            <div class="w-14 h-14 bg-green-900/40 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Stays on Your Machine</h3>
            <p class="text-gray-400">All content generation happens locally. Nothing is sent to external servers.</p>
          </div>
          <div>
            <div class="w-14 h-14 bg-cyan-900/40 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3" />
