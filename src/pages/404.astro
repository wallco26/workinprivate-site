---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - WorkInPrivate" description="The page you're looking for doesn't exist.">

  <section class="py-20 sm:py-32 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-lg mx-auto text-center">
        <p class="text-6xl font-bold text-indigo-600 mb-4">404</p>
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Page Not Found</h1>
        <p class="text-lg text-gray-600 mb-8">The page you're looking for doesn't exist or has been moved.</p>
        <a href="/" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-200">
          Back to Home
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
