      <!-- Divider -->
      <div class="border-t border-gray-800 my-6 animate-[fadeIn_2.4s_ease-out]"></div>

      <!-- Final Prompt with Blinking Cursor -->
      <div class="text-green-400 font-semibold animate-[fadeIn_2.5s_ease-out]">
        Choose a module (number): <span class="cursor-blink inline-block w-2 h-4 bg-green-400 ml-1 align-middle"></span>
      </div>
    </div>
  </div>

  <!-- Terminal Glow Effect -->
  <div class="absolute -inset-4 -z-10 bg-green-500/10 rounded-2xl blur-3xl opacity-60"></div>
  <div class="absolute -inset-2 -z-10 bg-gradient-to-b from-green-500/5 to-cyan-500/5 rounded-xl"></div>
</div>

<style>
  /* Blinking cursor animation */
  @keyframes blink {
    0%, 49% {
      opacity: 1;
    }
    50%, 100% {
      opacity: 0;
    }
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  /* Fade in animation for terminal content */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Ensure monospace font is applied */
  .terminal-body {
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', monospace;
  }

  /* Prevent text selection for ASCII art */
  .ascii-logo {
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
  }

  /* Subtle scan-line effect on hover (optional terminal authenticity detail) */
  .terminal-window:hover .terminal-body {
    background-image:
      repeating-linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.01) 0px,
        transparent 1px,
        transparent 2px
      );
  }

  /* Smooth scrollbar for terminal */
  .terminal-body::-webkit-scrollbar {
    height: 8px;
  }
  .terminal-body::-webkit-scrollbar-track {
    background: #0a0e17;
  }
  .terminal-body::-webkit-scrollbar-thumb {
    background: #1e293b;
    border-radius: 4px;
  }
  .terminal-body::-webkit-scrollbar-thumb:hover {
    background: #334155;
  }
</style>
