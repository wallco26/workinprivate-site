---
// Header component with navigation
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-border/60">
  <nav aria-label="Main" class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <!-- Logo / Brand -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span class="text-lg font-semibold text-heading tracking-tight">WorkInPrivate</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center">
        <div class="flex items-baseline space-x-6 mr-6">
          <a href="/" class="text-muted hover:text-heading px-2 py-1.5 text-[13px] font-medium transition-colors">
            Home
          </a>
          <a href="/pricing" class="text-muted hover:text-heading px-2 py-1.5 text-[13px] font-medium transition-colors">
            Pricing
          </a>
          <a href="/faq" class="text-muted hover:text-heading px-2 py-1.5 text-[13px] font-medium transition-colors">
            FAQ
          </a>
        </div>
        <a href="https://buy.stripe.com/test_9B6bJ05et2aW1aD1eeco000" class="inline-flex items-center px-4 py-1.5 text-[13px] font-medium rounded-full text-white bg-accent hover:bg-accent-hover transition-colors">
          Buy Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-lg text-muted hover:text-heading hover:bg-surface focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent"
          aria-expanded="false"
          aria-label="Main menu"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="mobile-menu hidden md:hidden pb-3 pt-2">
      <div class="flex flex-col space-y-1">
        <a href="/" class="text-body hover:text-heading hover:bg-surface block px-3 py-2 rounded-lg text-sm font-medium">
          Home
        </a>
        <a href="/pricing" class="text-body hover:text-heading hover:bg-surface block px-3 py-2 rounded-lg text-sm font-medium">
          Pricing
        </a>
        <a href="/faq" class="text-body hover:text-heading hover:bg-surface block px-3 py-2 rounded-lg text-sm font-medium">
          FAQ
        </a>
        <a href="https://buy.stripe.com/test_9B6bJ05et2aW1aD1eeco000" class="mt-2 text-center text-white bg-accent hover:bg-accent-hover block px-3 py-2.5 rounded-lg text-sm font-medium transition-colors">
          Buy Now &mdash; $29
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('hidden');
        mobileMenu.classList.toggle('hidden');
        menuButton.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
      });
    }
  });
</script>
