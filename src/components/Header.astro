---
// Header component with navigation
---

<header class="sticky top-0 z-50 bg-[#0a0e17]/95 backdrop-blur border-b border-gray-800">
  <nav aria-label="Main" class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo / Brand -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center text-green-400 font-mono">
          <span class="text-xl font-bold">WorkInPrivate</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center">
        <div class="flex items-baseline space-x-8 mr-6">
          <a href="/" class="text-gray-400 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/pricing" class="text-gray-400 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors">
            Pricing
          </a>
          <a href="/faq" class="text-gray-400 hover:text-green-400 px-3 py-2 text-sm font-medium transition-colors">
            FAQ
          </a>
        </div>
        <a href="/pricing" class="inline-flex items-center px-4 py-2 text-sm font-bold rounded-lg text-black bg-green-600 hover:bg-green-500 transition-colors shadow-sm font-mono">
          Buy Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-green-400 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-500"
          aria-expanded="false"
          aria-label="Main menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="mobile-menu hidden md:hidden pb-3 pt-2 bg-[#0a0e17]">
      <div class="flex flex-col space-y-1">
        <a href="/" class="text-gray-400 hover:text-green-400 hover:bg-gray-900 block px-3 py-2 rounded-md text-base font-medium">
          Home
        </a>
        <a href="/pricing" class="text-gray-400 hover:text-green-400 hover:bg-gray-900 block px-3 py-2 rounded-md text-base font-medium">
          Pricing
        </a>
        <a href="/faq" class="text-gray-400 hover:text-green-400 hover:bg-gray-900 block px-3 py-2 rounded-md text-base font-medium">
          FAQ
        </a>
        <a href="/pricing" class="mt-2 text-center text-black bg-green-600 hover:bg-green-500 block px-3 py-2.5 rounded-md text-base font-bold transition-colors font-mono">
          Buy Now &mdash; $29
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('hidden');
        mobileMenu.classList.toggle('hidden');
        menuButton.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
      });
    }
  });
</script>
